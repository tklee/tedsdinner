echo '  var feed = data.feed;'
echo '  var entries = feed.entry || [];'
echo '  var html = [\'<ul>\'];'
echo '  for (var i = 0; i < entries.length; i++) {'
echo '    var entry = entries[i];'
echo '    var title = entry.title.$t;'
echo '    html.push(\'<li>\', title, \'</li>\');'
echo '  }'
echo '  html.push(\'</ul>\');'
echo '  document.getElementById(\'videos\').innerHTML = html.join(\'\');'
echo '}'
