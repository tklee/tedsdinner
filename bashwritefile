echo '              thumbnailUrl, \'" width="130" height="97"/>\', \'</span></li>\');'
echo '  }'
echo '  html.push(\'</ul><br style="clear: left;"/>\');'
echo '  document.getElementById(\'videos2\').innerHTML = html.join(\'\');'
echo '  if (entries.length > 0) {'
echo '    loadVideo(entries[0].media$group.media$content[0].url, false);'
echo '  }'
echo '}'
echo ''
